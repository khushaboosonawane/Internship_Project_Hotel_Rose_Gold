<%- include("navbar.ejs") %>


<!-- Header Banner -->
<div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="4" data-background="/img/rest_place_banner.jpeg" style="background-attachment: fixed;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center caption mt-90">
                <h1><%= dis_fea[0].hot_subtitle %></h1>
                <h5><a href="/" style="text-decoration: none;color: white;">Home</a><b style="color: #d1ae6f;">/</b><%= dis_fea[0].hot_subtitle %></h5>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid bg-white">
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <h2 class="text-centertext-dark mt-5" style="text-transform: uppercase;"><%= dis_fea[0].hot_subtitle %></h2>
                <div class="Event-h-row text-center" style="background-color: #ac6e7b;"></div>
                <p class="text-dark text-dark mt-2" style="text-transform: uppercase;letter-spacing: 10px;">Rose Gold Hotel</p>
            </div>
        </div>
        <br><br>
    </div>
</div>
<br><br>

<div class="container">
    <div class="row">
        <div class="col-md-6 p-0 animate-box text-center" data-animate-effect="fadeInLeft">
            <div class="img left">
               <img src="/upload_image/hotel_discover_feature/<%= dis_fea[0].hot_image %>" alt="res_img">
            </div>
        </div>
        <div class="col-md-6 p-0 bg-cream valign animate-box" data-animate-effect="fadeInRight">
            <div class="content">
                <div class="cont text-center p-5">
                    <a href="/"><img src="/upload_image/website_logo/<%= hotel_data[0].hotel_logo %>" style="height: 150px;width: 150px;" alt=""></a>
                    
                    <h4><%= dis_fea[0].hot_subtitle %></h4>
                    <p><%= dis_fea[0].hot_description %></p>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<br><br>

<div class="container-fluid bg-white">
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <h2 class="text-centertext-dark mt-5" style="text-transform: uppercase;">More Images</h2>
                <div class="Event-h-row text-center" style="background-color: #ac6e7b;"></div>
                <p class="text-dark text-dark mt-2" style="text-transform: uppercase;letter-spacing: 10px;">Rose Gold Hotel</p>
            </div>
        </div>
        <br><br>
    </div>
</div>
<br><br><br>
<div class="container">
    <div class="row">
        <% for(var i=0;i<hotel_fea_image.length;i++){ %>
            <div class="col-md-4">
                <div class="card">
                    <div class="">
                        <img src="/upload_image/hotel_discover_feature/<%= hotel_fea_image[i].hotel_facility_image %>" alt="image" style="height: 300px;width: 100%;object-fit: cover;">
                    </div>
                    <div class="card-body text-center">
                        <%= hotel_fea_image[i].facility_desc %>
                    </div>
                </div>
            </div>
        <% } %>
        
    </div>
</div>
<br><br><br><br>

