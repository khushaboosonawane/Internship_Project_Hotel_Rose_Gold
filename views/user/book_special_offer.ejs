    <div class="container">
      <div class="row align-items-stretch no-gutters contact-wrap" style="display: flex;flex-wrap: wrap;">
        <div class="col-md-6">
          <div class="form h-100">
            <h2><%= booking_data[0].special_offer_name %> Form</h2>
            <br>
            <form class="mb-5" method="post" action="/save_special_offer_client" id="contactForm" name="contactForm">
              <div class="row">
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Name *</label>
                  <input type="text" class="form-control" name="client_name" id="name" placeholder="Your name">
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Email *</label>
                  <input type="email" class="form-control" name="client_email" id="email"  placeholder="Your email">
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Number *</label>
                  <input type="number" class="form-control" name="client_number" id="number"  placeholder="Your Phone Number">
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Check In Date</label>
                  <input type="date" class="form-control" name="client_checkin" id="phone"  placeholder="Phone #">
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Check Out Date</label>
                  <input type="date" class="form-control" name="client_checkout" id="company"  placeholder="Company  name">
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Hall Name</label>
                  <input type="text" class="form-control" name="hall_name" id="phone"  placeholder="Phone #" value="<%= booking_data[0].special_offer_name %>" readonly>
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Hall Price</label>
                  <input type="text" class="form-control" name="hall_price" id="company"  placeholder="Company  name" value="<%= booking_data[0].special_offer_price %>" readonly>
                </div>
              </div>

              <!-- <div class="row">
                <div class="col-md-12 form-group mb-5">
                  <label for="message" class="col-form-label">Message *</label>
                  <textarea class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Write your message"></textarea>
                </div>
              </div> -->
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="submit" value=" Book <%= booking_data[0].special_offer_name %>" class="btn btn-primary rounded-0 py-2 px-4">
                  <span class="submitting"></span>
                </div>
              </div>
            </form>

            <div id="form-message-warning mt-4"></div> 
           <% if(data){ %>
            <div id="form-message-success">
              Your message was sent, thank you!
            </div>
          <% } %>

          </div>
        </div>
