<%- include("navbar.ejs") %>

<!-- Header Banner -->
<div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="8" data-background="/img/gallery_banner.jpeg" style="background-attachment: fixed;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center caption mt-90">
                <h1>Gallery</h1>
                <h5><a href="/" style="text-decoration: none;color: white;">Home</a><b style="color:#d1ae6f;">/</b>Gallery</h5>
            </div>
        </div>
    </div>
</div>

<!-- Image Gallery -->
<section class="section-padding">
	<div class="container">
		<div class="row">
			<div class="row">
                <div class="col-md-12">
					<div class="section-title">Gallery</div>
					<div class="section-line"></div>
					<div class="section-subtitle">The Rose Gold Hotel</div>
				</div>
            </div>
			<!-- 3 columns -->
			<% for(var i=0;i<gallery_data.length;i++){ %>
				<div class="col-md-4 gallery-item">
					<a href="/upload_image/about_gallery_image/<%= gallery_data[i].about_gallery_image %>" title="" class="img-zoom">
						<div class="gallery-box text-center">
							<div class="gallery-img"> 
								<img src="/upload_image/about_gallery_image/<%= gallery_data[i].about_gallery_image %>" class="img-fluid mx-auto d-block" alt="work-img" style="height: 300px;width: 100%;object-fit: cover;"> 
							</div>
							<h2><%= gallery_data[i].about_gallery_name %></h2>
						</div>
					</a>
				</div>
			<% } %>
			
		</div>
	</div>
</section>
<!-- Video Gallery -->
<section class="section-padding bg-cream">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">Videos Gallery</div>
				<div class="section-line"></div>
				<div class="section-subtitle">The Rose Gold Hotel</div>
			</div>
			<!-- 2 columns -->
			<% for(var i=0;i<gallery.length;i++){ %>
				<div class="col-md-6">
					<div class="vid-area mb-30">
						<div class="vid-icon"> <img src="/upload_image/gallery_image/<%= gallery[i].gallery_image %>" alt="YouTube" style="height: 350px;width: 100%;object-fit: cover;">
							<a class="video-gallery-button vid" href="<%=  gallery[i].gallery_video %>"> <span class="video-gallery-polygon">
									<i class="ti-control-play"></i>
								</span> </a>
						</div>
					</div>
				</div>
			<% } %>
			
		</div>
	</div>
</section>
<%- include("footer.ejs") %>