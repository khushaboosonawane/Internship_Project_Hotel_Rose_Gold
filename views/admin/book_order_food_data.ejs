<%- include("navbar.ejs") %>

<div class="row ">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Order Food Details</h4>
          <div class="">
            <table class="table text-center table-hover table-responsive table-bordered">
              <thead>
                <tr>
                  <th>Srno</th>
                  <th>
                    Order Status
                  </th>
                  <th>Delete</th>
                  <th> Client Name </th>
                  <th> Client Mobile </th>
                  <th> Client Email </th>
                  <th>Order Date</th>
                  <th>Order Time</th>
                  <th>Order Quantity</th>
                  <th> Dish Name </th>
                  <th> Dish Price </th>
                </tr>
              </thead>
              <tbody>
                <% if(order_food_data.length>0){ %>
                  <% for(var i=0;i<order_food_data.length;i++){ %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td>
                        <% if(order_food_data[i].order_status=='pending'){ %>
                          <a href="/admin/approve_order_food_client/<%= order_food_data[i].cli_id %>/approve">
                            <div class="badge badge-outline-success" onclick="return confirm('Are You Sure To Confirm Order')" >Approved</div>
                          </a>
                          <a href="/admin/reject_order_food_client_data/<%= order_food_data[i].cli_id %>/reject">
                            <div class="badge badge-outline-danger" onclick="return confirm('Are You Sure To Reject Order')">Rejected</div> 
                          </a>
                        <% }else if(order_food_data[i].order_status=='reject'){ %>
                          <span class="text-danger"><i class="ri-close-circle-line" style="font-size: 1rem;"></i></span>
                        <% }else{ %>
                          <span class="text-success" style="font-size: 1rem;"><i class="ri-check-double-line"></i></span>
                        <% } %>

                      </td>
                      <td>
                        <a href="/admin/delete_order_food_data/<%= order_food_data[i].cli_id %>">
                          <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Are You Sure To Delete Record')"><i class="ri-delete-bin-line"></i></button>
                        </a>
                      </td>
                      <td><%= order_food_data[i].client_name %></td>
                      <td><%= order_food_data[i].client_number %></td>
                      <td><%= order_food_data[i].client_email %></td>
                      <!-- <td> <script>document.write(new Date().getDate() + "/" + parseInt(new Date().getMonth()+1) + "/" +new Date().getFullYear())</script> </td> -->
                      <td><%= order_food_data[i].order_date %></td>
                      <td>
                        <%= order_food_data[i].order_time %>
                      </td>
                      <td><%= order_food_data[i].quantity %></td>
                      <td><%= order_food_data[i].dish_name %></td>
                      <td><%= order_food_data[i].dish_price * order_food_data[i].quantity %>RS</td>
                    </tr>
                  <% } %>
                  
                <% }else{ %>
                  <td colspan="12" class="text-center">No Order Found</td>
                <% } %>
               
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>


<%- include("footer.ejs") %>