<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-md-12">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <div style="position: absolute;top: -40px;z-index: 999;left: 600px;">
          <div>
            <% if (successMessage) { %>
              <div style="color: white;border: 1px solid #b66b79;padding: 20px;z-index: 999;background-color: #b66b79;"
                id="notification">
                <%= successMessage %>
              </div>
              <% } %>
                <script>
                  setTimeout(function () {
                    // document.getElementById("notification").style.display = "none";
                    $("#notification").fadeOut(2000);
                  }, 3000);
                </script>
          </div>
        </div>

        <div class="row" style="margin-top: -12px;">
            <div class="col-12 grid-margin stretch-card">
              <div class="card corona-gradient-card">
                <div class="card-body py-0 px-0 px-sm-3">
                  <div class="row align-items-center" style="padding: 2px;">
                    <div class="col-4 col-sm-3 col-xl-2">
    
                      <i class="ri-article-line" style="font-size: 30px;"></i>
    
                    </div>
                    <div class="col-5 col-sm-7 col-xl-8 p-0">
                      <h4 class="mb-1 mb-sm-0 text-dark"
                        style="margin-left: -57px;margin-top: 5px;text-transform: capitalize;">Update Our News Information</h4>
    
                    </div>
    
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
    
                  <!-- create table our_new (our_news_id integer primary key auto_increment,our_news_title varchar(2000),our_new_subtitle varchar(10000),our_news_description text,our_news_data text,our_news_image text) -->
                  <form class="form-sample" action="/admin/update_our_news" enctype="multipart/form-data" method="post"
                    id="myform">
                    <input type="hidden" name="our_news_id" value="<%= our_news_da[0].our_news_id %>" id="">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Our News Title</label>
                          <div class="col-sm-9">
                            <input type="text" class="form-control" name="our_news_title" value="<%= our_news_da[0].our_news_title %>"  placeholder="Enter Our News Title"/>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Our News Subtitle</label>
                          <div class="col-sm-9">
                            <input type="text" class="form-control" name="our_new_subtitle" placeholder="Enter Our News Subtitle" value="<%= our_news_da[0].our_new_subtitle %>" />
                          </div>
                        </div>
                      </div>
    
                    </div>
    
    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">Our News Date</label>
                              <div class="col-sm-9">
                                <input type="date" class="form-control" name="our_news_data" value="<%= our_news_da[0].our_news_data %>" />
                              </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">News Description</label>
                              <div class="col-sm-9">
                                <textarea class="form-control" name="our_news_description" placeholder="Enter News Description"><%= our_news_da[0].our_news_description %></textarea>
                              </div>
                            </div>
                        </div>
                    
                        
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">News <br> Imgae</label>
                              <div class="col-sm-9">
                                <input  type="file" class="form-control" name="our_news_image" placeholder="Enter News Description"/>
                              </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <img src="/upload_image/our_news/<%= our_news_da[0].our_news_image %>" alt="" style="height: 150px;width: 150px;">
                        </div>
                    </div>
                    
    
                </div>

                
    
                <div class="row">
                  <div class="col-md-12 text-center">
                    <button type="submit" class="butt mr-2 my-4">Update Data</button>
                  </div>
                </div>
    
                </form>
              </div>
            </div>
    
          </div>
          <br><br>
    </div>

<%- include("footer.ejs") %>