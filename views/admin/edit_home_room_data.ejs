<%- include("navbar.ejs") %>

<div class="row" style="margin-top: -12px;">
    <div class="col-12 grid-margin stretch-card">
        <div class="card corona-gradient-card">
            <div class="card-body py-0 px-0 px-sm-3">
                <div class="row align-items-center" style="padding: 2px;">
                    <div class="col-4 col-sm-3 col-xl-2">

                        <i class="ri-home-8-line" style="font-size: 30px;"></i>

                    </div>
                    <div class="col-5 col-sm-7 col-xl-8 p-0">
                        <h4 class="mb-1 mb-sm-0 text-dark"
                            style="margin-left: -57px;margin-top: 5px;text-transform: capitalize;">Update Rooms
                            Information</h4>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <!-- create table rooms_and_sweets(room_id integer primary key auto_increment,rooms_image text,room_name varchar(2000),room_price integer,room_type varchar(2000)) -->

                <form class="form-sample" action="/admin/update_home_room_data" enctype="multipart/form-data"
                    method="post" id="myform">

                    <input type="hidden" name="room_id" value="<%= room_data[0].room_id %>" id="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Room Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="room_name" value="<%= room_data[0].room_name %>"
                                        placeholder="Enter Room Name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Room Type</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="room_type" value="<%= room_data[0].room_type %>"
                                        placeholder="Enter Room Type" />
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Room Price</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="room_price" value="<%= room_data[0].room_price %>"
                                        placeholder="Enter Room Price" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row d-flex align-items-center">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"> Select Room Image</label>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" name="rooms_image" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="/upload_image/home_room_image/<%= room_data[0].rooms_image %>" alt="" style="height: 150px;width: 150px;">
                        </div>
                    </div>

            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="butt mr-2 my-4">Update Data</button>
                </div>
            </div>

            </form>
        </div>
    </div>
</div>

