        <div class="card-body">
          <!-- create table slider (sli_id integer primary key auto_increment,slider_subtitle varchar(10000),slider_maintitle varchar(20000),slider_rating varchar(10),slider_image text); -->
           <form class="form-sample" action="/admin/update_slider_data" enctype="multipart/form-data" method="post" id="myform">
            <input type="hidden" name="sli_id" value="<%= slider_data[0].sli_id %>" id="">
            <div class="row">

              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Slider Main Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="slider_maintitle"  value="<%= slider_data[0].slider_maintitle %>"/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Slider Sub Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="slider_subtitle" value="<%= slider_data[0].slider_subtitle %>"/>
                  </div>
                </div>
              </div>
              
            </div>
            
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Slider Image</label>
                      <div class="col-sm-9">
                        <input type="file" class="form-control" name="slider_image"/>
                      </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="/upload_image/slider_image/<%= slider_data[0].slider_image %>" alt="" style="height: 150px;width: 150px;">
                </div>
            </div>
  
            <div class="row">
              <div class="col-md-12 text-center">
                <button type="submit" class="butt mr-2 my-4">Update Data</button>
              </div>
            </div>
  
          </form> 
        </div>
      </div>
