<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-md-12">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <div style="position: absolute;top: -40px;z-index: 999;left: 600px;">
          <div>
            <% if (successMessage) { %>
              <div style="color: white;border: 1px solid #b66b79;padding: 20px;z-index: 999;background-color: #b66b79;"
                id="notification">
                <%= successMessage %>
              </div>
              <% } %>
                <script>
                  setTimeout(function () {
                    // document.getElementById("notification").style.display = "none";
                    $("#notification").fadeOut(2000);
                  }, 3000);
                </script>
          </div>
        </div>
    </div>

    
</div>

<div class="row" style="margin-top: -12px;">
    <div class="col-12 grid-margin stretch-card">
      <div class="card corona-gradient-card">
        <div class="card-body py-0 px-0 px-sm-3">
          <div class="row align-items-center" style="padding: 2px;">
            <div class="col-4 col-sm-3 col-xl-2">

              <!-- <i class="ri-article-line" style="font-size: 30px;"></i> -->
              <i class="ri-award-line" style="font-size: 30px;"></i>

            </div>
            <div class="col-5 col-sm-7 col-xl-8 p-0">
              <h4 class="mb-1 mb-sm-0 text-dark"
                style="margin-left: -57px;margin-top: 5px;text-transform: capitalize;">Update Rewards Information</h4>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  

  <div class="row">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">

          <!-- create table rewards(rew_id integer primary key auto_increment,rew_title text,rew_desc text,rew_date varchar(30000),reward_image text);-->

          <form class="form-sample" action="/admin/update_rewards_data" enctype="multipart/form-data" method="post"
            id="myform">
            <input type="hidden" name="rew_id" value="<%= reward_data[0].rew_id %>">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Rewards Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="rew_title" value="<%= reward_data[0].rew_title %>"  placeholder="Enter Reward Title"/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Reward Date</label>
                  <div class="col-sm-9">
                    <input type="date" class="form-control" name="rew_date" value="<%= reward_data[0].rew_date %>" />
                  </div>
                </div>
            </div>
            </div>


            <div class="row">
        

                <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Reward Description</label>
                      <div class="col-sm-9">
                        <textarea class="form-control" name="rew_desc" placeholder="Enter Reward Description">
                            <%= reward_data[0].rew_desc %>
                        </textarea>
                      </div>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Reward Image</label>
                      <div class="col-sm-9">
                        <input  type="file" class="form-control" name="reward_image" placeholder="Enter News Description"/>
                      </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="/upload_image/reward_image/<%= reward_data[0].reward_image %>" style="height: 150px;width: 150px;" alt="">
                </div>
            </div>
            

        </div>

        

        <div class="row">
          <div class="col-md-12 text-center">
            <button type="submit" class="butt mr-2 my-4">Update Data</button>
          </div>
        </div>

        </form>
      </div>
    </div>

  </div>
  <br><br>

  
<%- include("footer.ejs") %>