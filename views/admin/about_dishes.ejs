<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-md-12">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
      <div style="position: absolute;top: -40px;z-index: 999;left: 600px;">
        <div>
          <% if (successMessage) { %>
            <div style="color: white;border: 1px solid #b66b79;padding: 20px;z-index: 999;background-color: #b66b79;"
              id="notification">
              <%= successMessage %>
            </div>
            <% } %>
              <script>
                setTimeout(function () {
                  // document.getElementById("notification").style.display = "none";
                  $("#notification").fadeOut(2000);
                }, 3000);
              </script>
        </div>
      </div>

      <div class="row" style="margin-top: -12px;">
        <div class="col-12 grid-margin stretch-card">
          <div class="card corona-gradient-card">
            <div class="card-body py-0 px-0 px-sm-3">
              <div class="row align-items-center" style="padding: 2px;">
                <div class="col-4 col-sm-3 col-xl-2">

                  <!-- <i class="ri-equalizer-line" style="font-size: 30px;"></i> -->
                  <i class="ri-equalizer-line" style="font-size: 30px;"></i>

                </div>
                <div class="col-5 col-sm-7 col-xl-8 p-0">
                  <h4 class="mb-1 mb-sm-0 text-dark"
                    style="margin-left: -57px;margin-top: 5px;text-transform: capitalize;">About Dishes Information</h4>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">

              <!-- create table dishes (dis_id integer primary key auto_increment,dish_name varchar(10000),dish_image text,dis_fea_one varchar(20000),dis_fea_two varchar(20000),dis_fea_three varchar(20000),dis_price decimal)-->

              <form class="form-sample" action="/admin/save_about_dishes" enctype="multipart/form-data" method="post"
                id="myform">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Name</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="dish_name" required />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Feature One</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="dis_fea_one" required />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Feature Two</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="dis_fea_two" required />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Feature Three</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="dis_fea_three" required />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Price</label>
                      <div class="col-sm-9">
                        <input type="number" class="form-control" name="dis_price" required />
                      </div>
                    </div>
                  </div>

                </div>



               <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Dish Image</label>
                      <div class="col-sm-9">
                        <input type="file" class="form-control" name="dish_image" required />
                      </div>
                    </div>
                  </div>
               </div>

            </div>

            <div class="row">
              <div class="col-md-12 text-center">
                <button type="submit" class="butt mr-2 my-4">Save</button>
              </div>
            </div>

            </form>
          </div>
        </div>

      </div>
      <br><br>

      <div class="container">
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">About Dishes Information</h4>
                </p>
                <div class="table-responsive">
                  <table class="table table-hover table-bordered text-center">
                    <thead>
                      <tr>
                        <th> Update Data </th>
                        <th> SrNo </th>
                        <th> Dish Name </th>
                        <th> Dish Feature One </th>
                        <th> Dish Feature Two </th>
                        <th> Dish Feature Three </th>
                        <th> Dish Image </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(about_dishes.length>0){ %>
                        <% for(var i=0;i<about_dishes.length;i++){ %>

                          <tr>
                            <td>
                              <a href="/admin/edit_about_dishes/<%= about_dishes[i].dis_id %>"
                                style="text-decoration: none;">
                                <button type="button" class="btn btn-outline-twitter"
                                  style="padding: 10px;text-align: center;">
                                  <i class="ri-edit-box-line"></i>
                                </button>
                              </a>
                              <a href="/admin/delete_about_dishes?id=<%= about_dishes[i].dis_id %>"
                                style="text-decoration: none;">
                                <button type="button" class="btn btn-outline-youtube"
                                  style="padding: 10px;text-align: center;"
                                  onclick="return confirm('Are You Sure To Delete Data')">
                                  <i class="ri-delete-bin-line"></i>
                                </button>
                              </a>

                            </td>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td>
                              <%= about_dishes[i].dish_name %>
                            </td>
                            <td>
                              <%= about_dishes[i].dis_fea_one %>
                            </td>
                            <td>
                                <%= about_dishes[i].dis_fea_two %>
                            </td>
                            <td>
                                <%= about_dishes[i].dis_fea_three %>
                              </td>

                            <td class="py-1">
                              <img src="/upload_image/about_dish_image/<%= about_dishes[i].dish_image %>" alt="image" />
                            </td>
                          </tr>

                          <% } %>
                            <% }else{ %>
                              <tr style="text-align: center;">
                                <td colspan="7">Data Not Found</td>
                              </tr>
                              <% } %>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


    
    </div>

</div>

<%- include("footer.ejs") %>