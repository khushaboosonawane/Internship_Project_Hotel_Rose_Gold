<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">

          <!-- create table wines (wines_id integer primary key auto_increment,wines_name varchar(10000),wines_price integer,wines_quantity integer,wine_com_id integer,wines_description text,wines_image text,wines_feature text)  -->

          <form class="form-sample" action="/admin/update_wines_sub_cat_data" enctype="multipart/form-data" method="post"
            id="myform">
            <input type="hidden" name="wine_com_id" value="<%= wine_data[0].wine_com_id %>">
            <input type="hidden" name="wines_id" value="<%= wine_data[0].wines_id %>">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Wine Name</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="wines_name" value="<%= wine_data[0].wines_name %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Wine Price</label>
                  <div class="col-sm-9">
                    <input type="number" class="form-control" name="wines_price" value="<%= wine_data[0].wines_price %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Wine Description</label>
                  <div class="col-sm-9">
                    <textarea class="form-control" name="wines_description"><%= wine_data[0].wines_description %></textarea>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Wine Feature</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="wines_feature" value="<%= wine_data[0].wines_feature %>" />
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Wine Image</label>
                  <div class="col-sm-9">
                    <input type="file" class="form-control" name="wines_image"/>
                  </div>
                </div>
            </div>
            <div class="col-md-6">
                <img src="/upload_image/wine_images/<%= wine_data[0].wines_image %>" style="height: 150px;width: 150px;" alt="">
            </div>
        </div>

        <div class="row">
          <div class="col-md-12 text-center">
            <button type="submit" class="butt mr-2 my-4">Update Data</button>
          </div>
        </div>

        </form>
      </div>
    </div>

  </div>
  <br><br>

<%- include("footer.ejs") %>