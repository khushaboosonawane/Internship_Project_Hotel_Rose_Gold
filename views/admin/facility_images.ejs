<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-md-12">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
      <div style="position: absolute;top: -40px;z-index: 999;left: 600px;">
        <div>
          <% if (successMessage) { %>
            <div style="color: white;border: 1px solid #b66b79;padding: 20px;z-index: 999;background-color: #b66b79;"
              id="notification">
              <%= successMessage %>
            </div>
            <% } %>
              <script>
                setTimeout(function () {
                  // document.getElementById("notification").style.display = "none";
                  $("#notification").fadeOut(2000);
                }, 3000);
              </script>
        </div>
      </div>
    </div>
</div>

<div class="row" style="margin-top: -12px;">
    <div class="col-12 grid-margin stretch-card">
      <div class="card corona-gradient-card">
        <div class="card-body py-0 px-0 px-sm-3">
          <div class="row align-items-center" style="padding: 2px;">
            <div class="col-4 col-sm-3 col-xl-2">

              <i class="ri-file-image-line" style="font-size: 30px;"></i>

            </div>
            <div class="col-5 col-sm-7 col-xl-8 p-0">
              <h4 class="mb-1 mb-sm-0 text-dark"
                style="margin-left: -57px;margin-top: 5px;text-transform: capitalize;">Hotel Facility Images</h4>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">

          <!-- create table hotel_facility_discover_image (hot_fac_img integer primary key auto_increment,hotel_facility_image text,facility_desc varchar(1000)) -->
          <form class="form-sample" action="/admin/save_hotel_facility" enctype="multipart/form-data" method="post"
            id="myform">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Facility Description</label>
                  <div class="col-sm-9">
                    <textarea class="form-control" name="facility_desc" required placeholder="Enter Facility Description"></textarea>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Hotel Facility Image</label>
                  <div class="col-sm-9">
                    <input type="file" class="form-control" name="hotel_facility_image" required />
                  </div>
                </div>
              </div>

            </div>

        </div>

        <div class="row">
          <div class="col-md-12 text-center">
            <button type="submit" class="butt mr-2 my-4">Save Data</button>
          </div>
        </div>

        </form>
      </div>
    </div>

  </div>


  <div class="container">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Facility Images</h4>
            </p>
            <div class="table-responsive">
              <table class="table table-hover table-bordered text-center">
                <thead>
                  <tr>
                    <th> Update Data </th>
                    <th> SrNo </th>
                    <th> Facility Image </th>
                    <th> Facility Imgae Description </th>
                  </tr>
                </thead>
                <tbody>
                  <% if(facility_image_data.length>0){ %>
                    <% for(var i=0;i<facility_image_data.length;i++){ %>

                      <tr>
                        <td>
                          <a href="/admin/edit_facility_image_data/<%= facility_image_data[i].hot_fac_img %>"
                            style="text-decoration: none;">
                            <button type="button" class="btn btn-outline-twitter"
                              style="padding: 10px;text-align: center;">
                              <i class="ri-edit-box-line"></i>
                            </button>
                          </a>
                          <a href="/admin/delete_facility_image_data?id=<%= facility_image_data[i].hot_fac_img %>"
                            style="text-decoration: none;">
                            <button type="button" class="btn btn-outline-youtube"
                              style="padding: 10px;text-align: center;"
                              onclick="return confirm('Are You Sure To Delete Data')">
                              <i class="ri-delete-bin-line"></i>
                            </button>
                          </a>

                        </td>
                        <td>
                          <%= i+1 %>
                        </td>
                        <td>
                          <%= facility_image_data[i].facility_desc %>
                        </td>
                       

                        <td class="py-1">
                          <img src="/upload_image/hotel_discover_feature/<%= facility_image_data[i].hotel_facility_image %>" alt="image" />
                        </td>
                      </tr>

                      <% } %>
                        <% }else{ %>
                          <tr style="text-align: center;">
                            <td colspan="4">Data Not Found</td>
                          </tr>
                          <% } %>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include("footer.ejs") %>