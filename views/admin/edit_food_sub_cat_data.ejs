<%- include("navbar.ejs") %>

<div class="row">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">

          <!-- create table food (food_id integer primary key AUTO_INCREMENT,food_name varchar(20000),food_price integer,food_quantity integer,food_com_id text,food_image text,food_description text,food_feature_one text,food_feature_two text,food_feature_three text,food_veg_nonveg varchar(20000),food_type text) -->

          <form class="form-sample" action="/admin/update_food_sub_cat_data" enctype="multipart/form-data" method="post"
            id="myform">
            <input type="hidden" name="food_com_id" value="<%= food_data[0].food_com_id %>">
            <input type="hidden" name="food_id" value="<%= food_data[0].food_id %>">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Name</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="food_name" value="<%= food_data[0].food_name %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Price</label>
                  <div class="col-sm-9">
                    <input type="number" class="form-control" name="food_price" value="<%= food_data[0].food_price %>" />
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Description</label>
                  <div class="col-sm-9">
                    <textarea class="form-control" name="food_description"><%= food_data[0].food_description %></textarea>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Type</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="food_type" value="<%= food_data[0].food_type %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Feature One</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="food_feature_one" value="<%= food_data[0].food_feature_one %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Feature Two</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="food_feature_two" value="<%= food_data[0].food_feature_two %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Food Feature Three</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="food_feature_three" value="<%= food_data[0].food_feature_three %>" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Food Feature</label>
                    <div class="col-sm-9">
                      <select class="form-control" name="food_veg_nonveg">
                          <option value="<%= food_data[0].food_veg_nonveg %>" selected><%= food_data[0].food_veg_nonveg %></option>
                        <option value="veg">Veg</option>
                        <option value="nonveg">Non Veg</option>
                        <option value="veg/nonveg">veg/nonveg</option>
                      </select>
                    </div>
                  </div>
              </div>


            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                      <label class="col-sm-3 col-form-label">Food Image</label>
                      <div class="col-sm-9">
                        <input type="file" class="form-control" name="food_image" />
                      </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="/upload_image/food_images/<%= food_data[0].food_image %>" style="height: 150px;width: 150px;" alt="">
                </div>
              </div>
        </div>

        <div class="row">
          <div class="col-md-12 text-center">
            <button type="submit" class="butt mr-2 my-4">update</button>
          </div>
        </div>

        </form>
      </div>
    </div>

  </div>
  <br><br>


<%- include("footer.ejs") %>